        <class>org.broadband_forum.obbaa.nf.entities.nf.GrpcChannel</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.GrpcConnectionBackoff</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.AccessPoint</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.AccessPointPK</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.KafkaTransportAgent</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.KafkaTransportAgentParameters</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.GrpcTransport</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.GrpcTransportParameters</class>

        <properties>
            <!-- Configuring JDBC properties -->
            <!-- Hibernate properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
            <!--TRANSACTION_REPEATABLE_READ == 4 -->
            <property name="hibernate.connection.isolation" value="4"/>
            <!-- Configuring Connection Pool -->
            <property name="hibernate.c3p0.min_size" value="5"/>
            <property name="hibernate.c3p0.max_size" value="20"/>
            <property name="hibernate.c3p0.timeout" value="500"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="2000"/>
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
        </properties>
    </persistence-unit>
</persistence>