        <class>org.broadband_forum.obbaa.dmyang.entities.DeviceMgmt</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.DeviceNotification</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.DevicePK</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.DeviceState</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.ManagedDevices</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.PasswordAuth</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.DbVersion</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.Netconf</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.OnuConfigInfo</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.OnuStateInfo</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.ActualAttachmentPoint</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.SoftwareImage</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.ExpectedAttachmentPoint</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.VomciOnuManagement</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.OnuManagementChain</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.OnuManagementChainPK</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.NetworkFunctionLinks</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.NetworkFunctionLink</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.NetworkFunctionLinkPK</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.TerminationPointA</class>
        <class>org.broadband_forum.obbaa.dmyang.entities.TerminationPointB</class>
        <class>org.broadband_forum.obbaa.onu.entity.UnknownONU</class>
