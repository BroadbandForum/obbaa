        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <jta-data-source>osgi:service/javax.sql.DataSource/(osgi.jndi.service.name=baa)</jta-data-source>

        <class>org.broadband_forum.obbaa.dmyang.entities.Authentication</class>
