        <class>org.broadband_forum.obbaa.nf.entities.nf.RemoteEndpoint</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.RemoteEndpointPK</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.RemoteEndpoints</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.KafkaPublicationParameters</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.KafkaAgentParameters</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.KafkaAgent</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.KafkaTopic</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.KafkaTopicPK</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.KafkaConsumptionParameters</class>
        <class>org.broadband_forum.obbaa.nf.entities.nf.NFInitiate</class>
